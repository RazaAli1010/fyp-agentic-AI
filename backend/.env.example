# Application
NODE_ENV=development
PORT=5000
API_PREFIX=/api

# URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000

# Database
MONGODB_URI=mongodb://localhost:27017/startup-ai
MONGODB_TEST_URI=mongodb://localhost:27017/startup-ai-test

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Claude AI
CLAUDE_API_KEY=your-claude-api-key-here
CLAUDE_SONNET_MODEL=claude-sonnet-3-5-20241022
CLAUDE_HAIKU_MODEL=claude-haiku-3-5-20241022
CLAUDE_MAX_TOKENS=4096
CLAUDE_TEMPERATURE=0.7

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@startup-ai.com
EMAIL_FROM_NAME=Startup AI Platform
SUPPORT_EMAIL=support@startup-ai.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,csv,xlsx

# CORS
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_CONSOLE=true